{
  "name": "Express-TypeScript-Simple",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "// ------ DEVELOPMENT ----- //": "",
    "serve": "ts-node-dev src/index.ts",
    "debug": "nodemon src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"dist/**/*.js\"",
    "convert": "ts-jest config:migrate ./jest.config.js",
    "// ------ TESTING ----- //": "",
    "test:watch": "jest ./src --watch",
    "test": "jest",
    "coverage": "jest --collectCoverageFrom=src/**.js --coverage",
    "// ------ BUILDING ----- //": "",
    "build": "tsc",
    "build:watch": "tsc -w",
    "// ------ LINTING ----- //": "",
    "lint:list": "eslint */**/*.js --fix",
    "lint": "eslint ./src/*.ts ./src/**/*.ts --fix",
    "start": "/dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/config": "0.0.34",
    "@types/http-errors": "^1.6.2",
    "@types/jest": "^24.0.18",
    "config": "^3.2.2",
    "ejs": "^2.7.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "express": "^4.17.1",
    "http-errors": "^1.7.3",
    "jest": "^24.9.0",
    "lodash": "^4.17.15",
    "path": "^0.12.7",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/node": "^12.7.8",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.5.0",
    "ts-node-dev": "^1.0.0-pre.43"
  }
}
